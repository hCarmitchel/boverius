:javascript
  $(document).ready(function() {
    $('#fullpage').fullpage({
      sectionsColor: ['#422E25', '#B9E8CE', '#D3E7DC', '#ddd', '#eee'],
      loopBottom: true,
      menu: '#example-menu',
      recordHistory: false,
      navigationTooltips: ['Album', 'The Wedding', 'About Us', 'FAQ', 'Contact Us'],
      navigation: true,
      showActiveTooltip: true,
      responsiveWidth: 1100
    });
  });
